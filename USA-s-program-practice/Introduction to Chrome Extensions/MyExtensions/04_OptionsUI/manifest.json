{
  "manifest_version": 2,
  "name": "Change background color with options UI",
  "version": "1.0",

  "browser_action": {
    "default_icon": {
      "16": "icon.png"
    }
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "background": {
    "scripts": ["event.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "storage"
  ]
}